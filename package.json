{
  "name": "open-medical-scribe",
  "version": "0.1.0",
  "description": "Open source medical scribe backend with pluggable API and local providers",
  "type": "module",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test",
    "build:cli": "bun build --compile --target=bun --outfile=dist/scribe-transcribe cli/transcribe.js && bun build --compile --target=bun --outfile=dist/scribe-note cli/note.js",
    "build:cli:transcribe": "bun build --compile --target=bun --outfile=dist/scribe-transcribe cli/transcribe.js",
    "build:cli:note": "bun build --compile --target=bun --outfile=dist/scribe-note cli/note.js",
    "electron:dev": "electron .",
    "electron:build:light:mac": "electron-builder --mac",
    "electron:build:light:win": "electron-builder --win",
    "electron:build:full:mac": "electron-builder --mac --config electron-builder.full.json",
    "electron:build:full:win": "electron-builder --win --config electron-builder.full.json",
    "models:download:whisper": "node scripts/download-whisper-model.js",
    "models:download:llm": "node scripts/download-llm-model.js"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "engines": {
    "node": ">=22"
  },
  "build": {
    "appId": "com.openmedicalscribe.app",
    "productName": "Open Medical Scribe",
    "asar": true,
    "files": [
      "src",
      "public",
      "electron",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.medical"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
